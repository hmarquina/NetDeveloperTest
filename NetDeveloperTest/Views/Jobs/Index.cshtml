@model IEnumerable<NetDeveloperTest.Models.Job>
@{
    ViewData["Title"] = "Job List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Jobs Menu</h1>

<div class="container">
    @if (TempData["message"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert" >
            @TempData["message"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>

    }

    <div class="row">
        <div class="col-sm">
            <h3>Jobs List</h3>
        </div>
        <div class="col-sm">
            <a class="btn btn-success d-block" role="button" asp-action="Create" asp-controller="Jobs">Add Job</a>
        </div>
    </div>

    <div class="row">
        @if (Model.Count() > 0)
        {

            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">@Html.DisplayNameFor(m => m.JobID)</th>
                        <th scope="col">@Html.DisplayNameFor(m => m.JobTitle)</th>
                        <th scope="col">@Html.DisplayNameFor(m => m.Description)</th>
                        <th scope="col">@Html.DisplayNameFor(m => m.CreatedAt)</th>
                        <th scope="col">@Html.DisplayNameFor(m => m.ExpiresAt)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>@item.JobID</td>
                        <td>@item.JobTitle</td>
                        <td>@item.Description</td>
                        <td>@item.CreatedAt</td>
                        <td>@item.ExpiresAt</td>
                        <td>
                            <a asp-controller="Jobs" asp-action="Edit" asp-route-id="@item.JobID" class="btn btn-warning">Edit Job</a>
                            <a asp-controller="Jobs" asp-action="Delete" asp-route-id="@item.JobID" class="btn btn-danger">Delete Job</a>
                        </td>
                    </tr>
                    }


                </tbody>
            </table>





        }
        else
        {
            <h4> Not Exists Data</h4>
        }
    </div>



</div>